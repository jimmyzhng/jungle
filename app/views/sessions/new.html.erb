<header class="page-header">
<h1>Login </h1>
</header>

<div class="container">
<%= form_tag '/login' do %>

  <b> Email </b>
  <br />
  <%= text_field_tag :email %>
  <br/>
  <b> Password </b>
  <br/>
  <%= password_field_tag :password %>
  <br />
 <%= submit_tag "Login", class: "login-button" %>

<% end %>
</div>