<header class="page-header">
<h1>Signup </h1>
</header>

<%= form_for :user, url: '/users' do |f| %>

  <b> Name </b>
  <br /> 
  <%= f.text_field :name %>
  <br />
  <b> Email </b>
  <br />
   <%= f.text_field :email %>
   <br />
  <b> Password </b>
  <br />
  <%= f.password_field :password %>
  <br />
  <b> Password Confirmation  </b>
  <br />
  <%= f.password_field :password_confirmation %>
  <br />
  <%= f.submit "Submit", class: "login-button" %>

<% end %>